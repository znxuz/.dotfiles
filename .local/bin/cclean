#!/usr/bin/env bash

nvim_dir="$XDG_STATE_HOME/nvim"

package_cache_clean()
{
	echo "==> clean package cache" && yay -Sccd --noconfirm
}

nvim_undo_clean()
{
	echo "==> clean undodir & removing log entries"

	undodir="$nvim_dir/undo"
	find "$undodir" -type f -ctime +30 -delete

	readarray -t files < <(ls "$undodir")
	for f in "${files[@]}"; do
	filename="$(echo "$f" | sed 's/%/\//g')"
	[[ ! -f "$filename" ]] && rm "$undodir/$f"
	done
}

nvim_log_clean()
{
	rm "$nvim_dir"/*log
}

journal_clean()
{
	sudo journalctl --vacuum-time=1week
}

package_cache_clean
nvim_undo_clean
nvim_log_clean
journal_clean
