	ps = push
	pl = pull
	r = restore
	rb = rebase
	rt = reset
	wt = worktree
[difftool "nvimdiff"]
    cmd = nvim -n -d "$LOCAL" "$REMOTE" -c'wincmd l'
	# cmd = nvim -n -c \"packadd nvim.difftool\" -c \"DiffTool $LOCAL $REMOTE\"
[diff]
    tool = nvimdiff
[merge]
	tool = nvimdiff
	keepBackup = false
[status]
	showStash = true
