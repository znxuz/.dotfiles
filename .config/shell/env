append_path()
{
	case ":$PATH:" in
		*:"$1":*)
			;;
		*)
			PATH="${PATH:+$PATH:}$1"
	esac
}

append_path $(find $HOME/.local/bin -type d | tr '\n' ':' | sed 's/:$//')

export SHELL="/usr/bin/zsh"
export EDITOR="nvim"
export VISUAL="$EDITOR"
export SUDO_EDITOR="$EDITOR"
export TERMINAL="alacritty"
export TERMINAL_WIN_NAME="Terminal"
export BROWSER="brave"
export LESSHISTFILE="-"
export MANPAGER="less --incsearch"

export XDG_CONFIG_HOME=$HOME/.config
export XDG_CACHE_HOME=$HOME/.cache
export XDG_DATA_HOME=$HOME/.local/share
export XDG_STATE_HOME=$HOME/.local/state

# home clean up https://wiki.archlinux.org/title/XDG_Base_Directory
export XINITRC=$XDG_CONFIG_HOME/X11/xinitrc
export ZDOTDIR=$XDG_CONFIG_HOME/zsh
export HISTFILE=$XDG_CACHE_HOME/zsh/history
export INPUTRC=$XDG_CONFIG_HOME/shell/inputrc
export PASSWORD_STORE_DIR=$XDG_DATA_HOME/password-store
export GTK2_RC_FILES=$XDG_CONFIG_HOME/gtk-2.0/gtkrc-2.0
export XAUTHORITY=$XDG_CONFIG_HOME/X11/Xauthority
export RUSTUP_HOME=$XDG_DATA_HOME/rustup
export CARGO_HOME=$XDG_DATA_HOME/cargo
append_path $CARGO_HOME/bin
export JUPYTER_PLATFORM_DIRS=$XDG_CONFIG_HOME/jupyter
export PYTHON_HISTORY=$XDG_STATE_HOME/python/history
export DOCKER_CONFIG=$XDG_CONFIG_HOME/docker
export WAKATIME_HOME=$XDG_CONFIG_HOME/wakatime

# fzf
export ESCDELAY="1"
export FZF_DEFAULT_OPTS='--bind change:top,alt-a:select-all,alt-d:deselect-all --border=none --color=base16 --color='current-bg:0,border:0' --layout=reverse --height=10 --cycle'
export FZF_DEFAULT_COMMAND='fd -L -H'
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
export FZF_ALT_C_COMMAND="$FZF_DEFAULT_COMMAND -td"

# make
# export MAKEFLAGS='-j'

# ros
